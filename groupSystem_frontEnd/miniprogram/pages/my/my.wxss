/* pages/my/my.wxss */
.myBasicInfo {
  background-color: white;
  padding-bottom: 10rpx;
}
.myBasicInfo .infoPart1{
  display: flex;
}
.infoPart1 image{
  height: 250rpx;
  width: 250rpx;
  border-radius: 15rpx;
  margin-left: 30rpx;
}
.infoPart1 text{
  flex: 1;
  display: flex;
  justify-content: center;
  align-content: center;
  padding-top: 100rpx;
  font-size: 50rpx;
}
.myBasicInfo .infoPart2{
  display: flex;
  margin-left: 70rpx;
  margin-right: 70rpx;
  padding-bottom: 50rpx;
  justify-content: space-between;
}
.menu{
  margin-top: 20rpx;
  background-color: white;
  line-height: 50rpx;
  /* border-radius: 20rpx;  */
}
.menu .item{
  display: flex;
  margin-right: 20rpx;
  margin-left: 20rpx;
  padding: 20rpx;
  border-bottom: 1rpx solid #ddd;
}
.item image{
  height: 50rpx;
  width: 50rpx;
}
.item text{
  flex:1;
  margin-left: 20rpx;
}
