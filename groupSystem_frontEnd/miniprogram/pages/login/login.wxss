page {
  background-color: #f0f0f0;
}
.root {
  display: flex;
  flex-direction: column;
  height: 100%;
}
.content1 {
  display: flex;
  flex-direction: column;
  width: 100%;
  /* height: 40%; */
}
.content1 .logo {
  flex: 1;
}
.content1 .logo image {
  width: 300px;
  height: 150px;
  display: block;
  margin: 0 auto;
  margin-top: 20px;
  border-radius: 50%;
}
.content1 .logo text {
  display: block;
  font-size: 15px;
  text-align: center;
}
.content3 {
  display: flex;
}
.content3 .buttons {
  flex: 1;
}
.content3 .buttons button {
  margin-top: 30rpx;
}
.form{
  padding: 40rpx;
}
.form .row-group{
  padding: 20rpx 0;
  border-bottom: 1rpx solid #ddd;
  position: relative;
}
.form .row-group text{
  font-size: 28rpx;
  padding:10rpx 0;
}
.form .row-group input{
  padding: 10rpx 0;
}
.form .row-group .txt{
  color: #ccc;
}