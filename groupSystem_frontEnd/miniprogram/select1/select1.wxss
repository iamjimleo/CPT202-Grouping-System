/* components/single-dropdown-select/index.wxss */

.ms-content-box {
  margin-left: 20rpx;
  width: 710rpx;
}

.ms-content {
  border-bottom: 2rpx solid #ddd;
  background: white;
  font-size: 32rpx;
  position: relative;
  height: 40rpx;
  line-height: 40rpx;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}

.ms-text {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 0 75rpx 0 15rpx;
  font-size: 14px;
  margin-left: 10rpx;
}

.ms-options {
  background: white;
  width: inherit;
  position: absolute;
  border: 2rpx solid #ddd;
  border-top: none;
  box-sizing: border-box;
  z-index: 3;
  max-height: 120px;
  overflow: auto;
}

.ms-option {
  height: 40rpx;
  line-height: 40rpx;
  border-top: 2rpx solid #ddd;
  padding: 0 15rpx;
  text-align: left;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 14px;
}

.ms-item:first-child {
  border-top: none;
}

.icon-right, .icon-down, .icon-up {
  display: inline-block;
  padding-right: 13rpx;
  position: absolute;
  right: 20rpx;
  top: 10rpx;
}

.icon-right::after, .icon-down::after, .icon-up::after {
  content: "";
  display: inline-block;
  position: relative;
  bottom: 2rpx;
  margin-left: 10rpx;
  height: 10px;
  width: 10px;
  border: solid #bbb;
  border-width: 2px 2px 0 0;
}

.icon-right::after {
  -webkit-transform: rotate(45deg);
  transform: rotate(45deg);
}

.icon-down::after {
  bottom: 14rpx;
  -webkit-transform: rotate(135deg);
  transform: rotate(135deg);
}

.icon-up::after {
  bottom: 0rpx;
  -webkit-transform: rotate(-45deg);
  transform: rotate(-45deg);
}